pipeline {
    agent any

    stages {
        stage('test') {
            steps {
                echo 'Hello World'
            }
        }
        stage('build') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Deploy on Test') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Deploy On Prod') {
            steps {
                echo 'Hello World'
            }
        }
    }
    post {
        always {
                echo 'this block always excute'
        }
    }

}
